<resources>
    <style name="Base.Theme.StoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
    </style>

    <style name="Theme.StoryApp" parent="Base.Theme.StoryApp" />

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">14dp</item>
        <item name="strokeColor">?colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:backgroundTint">?colorSecondary</item>
    </style>

    <style name="Button.Outlined">
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:backgroundTint">?android:colorBackground</item>
        <item name="rippleColor">?colorPrimaryVariant</item>
    </style>

    <style name="Button.Floating" parent="Button">
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="tint">?colorOnSecondary</item>
    </style>

    <style name="Input">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxCornerRadiusTopEnd">2dp</item>
        <item name="boxCornerRadiusBottomStart">2dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="title">@string/app_name</item>
        <item name="menu">@menu/main_menu</item>
        <item name="android:background">?colorPrimaryVariant</item>
    </style>
</resources>